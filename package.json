{
  "name": "wishlist-app-codex",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/web",
    "packages/shared-types"
  ],
  "scripts": {
    "dev:web": "npm --workspace apps/web run dev",
    "build:web": "npm --workspace apps/web run build",
    "lint:web": "npm --workspace apps/web run lint",
    "test:web": "npm --workspace apps/web run test",
    "test:e2e": "npm --workspace apps/web run test:e2e",
    "gen:types": "openapi-typescript http://localhost:8000/api/v1/openapi.json -o packages/shared-types/src/api.ts"
  },
  "devDependencies": {
    "openapi-typescript": "^7.10.1"
  }
}
